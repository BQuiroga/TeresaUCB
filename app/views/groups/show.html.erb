<div class="container" style="margin-top:50px">
<div class="panel panel-primary">
  <div class="panel-heading"><div class="panel-title" style="padding-top:1px;padding-bottom:1px"><h4 style="margin-top:10px">Todos los miembros </h4></div></div>
  <div class="panel-body">
  <% if @members.size >0%>
  <ul class="list-group">
  <% @members.each do |user| %>
    <li class="list-group-item">
      <div>
        <h5>  <b><%=user.name%>&emsp;</b>
          &emsp;&emsp;
          <%if user.is_my_group(@group.id)%>
            Creador
          <%else%>
              Miembro
          <%end%>
          <%if current_user.not_me(user.id)%>
            <a href="/curriculums/<%=user.id%>">
              <button class="btn btn-default btn-sm pull-right">Ver Perfil</button>
            </a>
            <%if current_user.is_my_group(@group.id)%>
              <button class="btn btn-warning btn-sm pull-right">
                <%=link_to "Botar", {controller: "groups",action:"botar",id:@group.id,user_id:user.id}%>
              </button>
            <%end%>
          <%end%>
        </h5>
      </div>
    </li>
      <%end%>
   <%end%>
 </ul>
 </div>
 </div>
 </div>
