  <div class="container" style="margin-top:50px">
   <div class="panel panel-footer well">
  <%= form_for :notification, url: '/mis_notificaciones/crear' do |f| %>
  <div class="row">
    <div class="col-md-12">
      <%=f.label :motivo%>:<br>
      <%=f.text_field :title, :class=>'form-control'%>
      <br><br>
      <%= f.text_area(:description, class: "form-control", placeholder: "Explicanos un poco.\n¿Que te motiva para postularte a ese trabajo?\n¿Que habilidades tienes que apoyen a esta empresa?\nTal vez deberias solicitar una entrevista personal", rows: 4) %>
      <%=f.hidden_field :user_id, :value => @post.user.id%>
      <%=f.hidden_field :post_id,:value=>@post.id%>
      <%=f.hidden_field :sender,:value =>current_user.id%>
      <%=f.hidden_field :readed, :value=>false%>
    </div>
  </div>
      <button type="submit" class="btn btn-primary pull-right" style="margin-top:5px">
        Publicar <span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span>
      </button>
      <Br><br>
  <% end %>
  </div>
  </div>
