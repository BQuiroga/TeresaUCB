

$(document).ready(function(){
    $('#boton_academico').attr('disabled',true);
    $('#filtrar_i').keyup(function(){
        if($(this).val().length !=0)
          $('#boton_academico').attr('disabled', false);
        else
            $('#boton_academico').attr('disabled',true);
    })
});

