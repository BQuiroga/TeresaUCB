<div class="container">
<div id='Academico' >
  <div class="panel panel-default">
    <div class="panel-heading"><div class="panel-title"><h3>Formacion Academica </h3></div></div>
      <div class="panel-body">
      </div>
      <div class="panel-footer well">
        <%= form_for :education, url: '/education/update', html: { method: :put } do |f| %>
        <div class="container">
          <div class="field col col-md-3 col-xs-3">
            <%= f.label :grado_academico %><br />
            <%=f.text_field :title, :id=>'filtrar', :style=>'width:115%'%>
            <%= f.select :title,@title_list,{},class:"form-control col-12 col-md-9 col-xs-12",:id=>'titulos',:style=>"margin: 10px; width: 200px;height: 170px;",:size=>'10',:name=>'type[]'%>
          </div>
          <div class="field col col-md-3 col-xs-3">
            <%= f.label :institucion %>
            <%= f.text_field :school_name%>
          </div>
          <div class="field">
            <%= f.label :Fecha_ingreso %>
            <%= f.date_select :start_date,:start_year  =>1990, :end_year=>Time.now.year+5 %>
          </div>
            <div class="field">
            <%= f.label :fecha_egreso %>
            <%= f.date_select :end_date ,:start_year  =>1990, :end_year=>Time.now.year+5%>
          </div>
          <div class="field col col-md-3 col-xs-3">
          <%= f.label :descripcion %>
          <%= f.text_area :description%>
        </div>
        <%=f.hidden_field :id, :value => @education.id%>
          <div class="actions">
            <%= f.submit "Guardar",:class =>"btn btn-primary" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
$(document).ready(function(){
    $('#boton_academico').attr('disabled',true);
    $('#filtrar').keyup(function(){
        if($(this).val().length !=0)
          $('#boton_academico').attr('disabled', false);
        else
            $('#boton_academico').attr('disabled',true);
    })
  });
  $(document).ready(function () {
              (function ($) {
                  $('#filtrar').keyup(function () {
                      var rex = new RegExp($(this).val(), 'i');
                      $('#titulos option').hide();
                      $('#titulos option').filter(function () {
                          return rex.test($(this).text());
                      }).show();
                  })
              }(jQuery));
          });
  var e=document.getElementById('filtrar');
  $("#titulos").change(function(){
    $("#filtrar").val(this.value);
  }).change();
</script>
