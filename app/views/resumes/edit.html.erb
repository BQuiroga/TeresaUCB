<h2>Curriculum Vitae</h2>
  <div class="container-body ">
    <h2>Formacion Academica </h2>
    <% if @educations.size >0%>
    <h5><% @educations.each do |education| %></h5>
            <div>
                <p>
                  <h5><b><%=education.title%></b></h5>
                  <%=education.school_name%>&nbsp;
                  <%=education.start_date.year%>&emsp; - &emsp; <%=education.end_date.year%>
                </p>
            </div>
        <%end%>
     <%end%>
  </div>
<%= form_for :education, url: '/education/new' do |f| %>  
  <div class="field">
    <%= f.label :Titulo_academico %><br />
    <%= f.text_field :title%>
  </div>

    <div class="field">
    <%= f.label :Universidad %>
    <%= f.text_field :school_name%>
  </div>
  <div class="field">
    <%= f.label :Fecha_ingreso %>
    <%= f.date_select :start_date,:start_year  =>1990, :end_year=>Time.now.year %>
  </div>
    <div class="field">
    <%= f.label :fecha_egreso %>
    <%= f.date_select :end_date ,:start_year  =>1990, :end_year=>Time.now.year%>
  </div>
      <%= f.hidden_field :resume_id, :value => current_user.resume.id%>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
    <h2>Experiencia Profesional </h2>
        <% if @experiences.size >0%>
    <h5><% @experiences.each do |experience| %></h5>
            <div>
                <p>
                  <h5><b><%=experience.company_name%></b></h5>
                  <%=experience.job_title%><br>
                  <%=experience.start_job_date%>&emsp; - &emsp;
                  <%=experience.finish_job_date%>
                </p>
            </div>
        <%end%>
     <%end%>
<%= form_for :experience, url: '/experience/new' do |f| %>  
  <div class="field">
    <%= f.label :cargo_profesional %><br />
    <%= f.text_field :job_title%>
  </div>

    <div class="field">
    <%= f.label :empresa %>
    <%= f.text_field :company_name%>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_field :job_description%>
  </div>-
  <div class="field">
    <%= f.label :Fecha_ingreso %>
    <%= f.date_select :start_date ,:start_year  =>1990, :end_year=>Time.now.year%>
  </div>
    <div class="field">
    <%= f.label :fecha_salida %>
    <%= f.date_select :end_date ,:start_year  =>1990, :end_year=>Time.now.year%>
  </div>
      <%= f.hidden_field :resume_id, :value => current_user.resume.id%>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
<h2>Cursos y Seminarios </h2>
        <% if @courses.size >0%>
    <h5><% @courses.each do |course| %></h5>
            <div>
                <p>
                  <b><%=course.date.year%></b>&emsp;
                  <%=course.name%>&emsp;
                  <%=course.orador%>
                </p>
            </div>
        <%end%>
     <%end%>
<%= form_for :course, url: '/course/new' do |f| %>  
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :name%>
  </div>
  <div class="field">
    <%= f.label :fecha %>
    <%= f.date_select :date ,:start_year  =>1990, :end_year=>Time.now.year%>
  </div>
  <div>
    <%=f.label :yo_di_este_seminario_o_curso%>
    <%=f.check_box :given%>
  </div>
      <%= f.hidden_field :resume_id, :value => current_user.resume.id%>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
<%= form_for :knowledge, url: '/knowledge/new' do |f| %>  
  <div class="field">
    <%= f.label :area %><br />
    <%= f.select( :knowkedge_area_id, KnowledgeArea.all.collect {|a| [a.name, a.id]}) -%>
  </div>
    <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :description%>
  </div>

  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>
