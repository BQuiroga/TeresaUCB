<h2>Resume</h2>

<%= form_for @personal_info, url: '/personal/update' do |f| %>	
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address%>
  </div>
  <div class="field">
    <%= f.label :birthdate %><br />
    <%= f.text_field :birthdate%>
  </div>
    <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :cellphone %>
    <%= f.text_field :cellphone %>
  </div>
  <%=current_user.personal_information.id%>
      <%= f.hidden_field :user_id, :value => current_user.id%>
      <%=f.hidden_field :id, :value => current_user.personal_information.id%>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
  <div class="container-body ">
    <h2>Formacion Academica </h2>
    <% if @educations.size >0%>
    <h5><% @educations.each do |education| %></h5>
            <div>
                <p>
                  <h5><b><%=education.title%></b></h5>
                  <%=education.school_name%>&nbsp;
                  <%=education.start_date.year%>&emsp; - &emsp; <%=education.end_date.year%>
                </p>
            </div>
        <%end%>
     <%end%>
  </div>
<%= form_for :education, url: '/education/new' do |f| %>  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title%>
  </div>

    <div class="field">
    <%= f.label :school_name %>
    <%= f.text_field :school_name%>
  </div>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_select :start_date %>
  </div>
    <div class="field">
    <%= f.label :end_date %>
    <%= f.date_select :end_date %>
  </div>
      <%= f.hidden_field :resume_id, :value => current_user.resume.id%>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
    <h2>Experiencia Profesional </h2>
        <% if @experiences.size >0%>
    <h5><% @experiences.each do |experience| %></h5>
            <div>
                <p>
                  <h5><b><%=experience.company_name%></b></h5>
                  <%=experience.job_title%><br>
                  <%=experience.start_job_date%>&emsp; - &emsp;
                  <%=experience.finish_job_date%>
                </p>
            </div>
        <%end%>
     <%end%>
<%= form_for :experience, url: '/experience/new' do |f| %>  
  <div class="field">
    <%= f.label :job_title %><br />
    <%= f.text_field :job_title%>
  </div>

    <div class="field">
    <%= f.label :company_name %>
    <%= f.text_field :company_name%>
  </div>
  <div class="field">
    <%= f.label :job_description %><br />
    <%= f.text_field :job_description%>
  </div>-
  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_select :start_date %>
  </div>
    <div class="field">
    <%= f.label :end_date %>
    <%= f.date_select :end_date %>
  </div>
      <%= f.hidden_field :resume_id, :value => current_user.resume.id%>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
<h2>Cursos y Seminarios </h2>
        <% if @courses.size >0%>
    <h5><% @courses.each do |course| %></h5>
            <div>
                <p>
                  <b><%=course.date.year%></b>&emsp;
                  <%=course.name%><br>
                </p>
            </div>
        <%end%>
     <%end%>
<%= form_for :course, url: '/course/new' do |f| %>  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name%>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>
      <%= f.hidden_field :resume_id, :value => current_user.resume.id%>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>