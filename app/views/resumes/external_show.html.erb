  color: #bf0d19;
}
.cv-title-name{
  left:5%;
  position:  auto;
}
.vertical-title{
  writing-mode: vertical-lr;
  transform: rotate(180deg);
}
.vertical-section-blue{
  right: auto;
  border: 5px solid #000099;
  padding-bottom: 21px;

