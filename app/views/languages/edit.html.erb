<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><div class="panel-title"><h3>Idioma</h3></div></div>
      <div class="panel-body">
      </div>
<div class="panel-footer well">
  <div class="container">
  <%= form_for :language, url: '/language/update' do |f| %>
    <div class="field col col-sm-4 col-md-4 col-xs-4">
      <%= f.label :idioma %><br />
      <%= f.text_field :name,:id=>'idioma',:class=>"form-control"%>
    </div>
    <br>
    <div class="field col col-sm-4 col-md-4 col-xs-4">
      <%=f.label :nivel%>
      <%= f.select(:level, options_for_select(Language.levels)) %>
    </div>
    <div class="field col col-sm-4 col-md-4 col-xs-4">
      <%=f.label :habilidades%>
      <%= f.select(:skill, options_for_select(Language.skills)) %>
    </div>
    <br>
        <%= f.hidden_field :resume_id, :value => current_user.resume.id%>
      <br>
    <div class="actions">
      <%= f.submit "Guardar" , :class =>"btn btn-primary",:id=>'boton_idiomas'%>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>
