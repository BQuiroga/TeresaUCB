<div class="container" style="margin-top:25px">
  <div class="panel panel-default">
    <div class="panel-heading"><div class="panel-title"><h3>Idioma</h3></div></div>
      <div class="panel-body">
      </div>
      <div class="panel-footer well">
        <div class="row">
        <%= form_for :language, url: '/language/update' do |f| %>
          <div class="col col-md-4">
            <%= f.label :idioma %><br />
            <%= f.text_field :name,:id=>'idioma',:class=>"form-control"%>
          </div>
          <div class="col col-md-4">
            <%=f.label :nivel%><br>
            <%= f.select(:level, options_for_select(Language.levels),{},:class=>"selector") %>
          </div>
          <div class="col col-md-4">
            <%=f.label :habilidades%><br>
            <%= f.select(:skill, options_for_select(Language.skills),{},:class=>"selector-x") %>
          </div>
              <%= f.hidden_field :resume_id, :value => current_user.resume.id%>
            <br>
          <div class="actions">
            <%= f.submit "Guardar" , :class =>"btn btn-primary pull-right",:id=>'boton_idiomas'%>
          </div>
          <% end %>
        </div>
      </div>
</div>
</div>
    <style>
      .selector{
        width: 120px;
        padding: 5px 35px 5px 5px;
        font-size: 14px;
        border: 1px solid #ccc;
        height: 32px;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
      }
      .center-select{
        padding-left:25%;
        left:30%;
      }
    .selector-x{
      width: 80%;
      padding: 5px 35px 5px 5px;
      font-size: 14px;
      border: 1px solid #ccc;
      height: 32px;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      }
      .center-select{
        padding-left:25%;
      left:30%;
      }
    }
    </style>
