<div class="container" style="margin-top:25px">
  <div class="panel panel-default">
    <div class="panel-heading"><div class="panel-title"><h3>Publicación</h3></div></div>
      <div class="panel-body">
      </div>
      <div class="panel-footer well">
        <%= form_for :publication, url: '/publication/update', html: { method: :put } do |f| %>
          <div class="row">
            <div class="field col col-md-6">
              <%= f.label :Nombre %><br />
              <%= f.text_field :name,:class=>"form-control"%>
            </div>
            <div class="field col col-md-6">
              <%= f.label :lugar %><br />
              <%= f.text_field :location,:class=>"form-control"%>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="field  col col-md-6">
              <%= f.label :tipo_de_publicación %>
              <%= f.select( :publicationType, @publicationTypes.map {|a| [a]},{},:class=>"selector") -%>
            </div>
            <div class="field  col col-md-6">
              <%= f.label :fecha %>
              <%= f.date_select :date ,:start_year  =>1990, :end_year=>Time.now.year%>
            </div>
          </div>
          <%=f.hidden_field :id, :value => @publication.id%>
            <div class="actions">
              <%= f.submit "Guardar",:class =>"btn btn-primary pull-right" %>
            </div>
        <% end %>
        <br>
      </div>

    </div>
  </div>
  <style>
  .selector{
    width: 120px;
    padding: 5px 35px 5px 5px;
    font-size: 14px;
    border: 1px solid #ccc;
    height: 32px;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    }
      .center-select{
        padding-left:25%;
      left:30%;
      }
  }
  </style>
