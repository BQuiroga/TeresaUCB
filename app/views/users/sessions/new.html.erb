
      <div class="container" style="margin-top:25px;">
        <div class="col col-md-3">
        </div>
        <div class="col col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
              <div class="container">
                <h3>Ingresa a nuestro sítio</h3>
                <h5><em>Ingresa tu correo electrónico y tu contraseña:</em></h5>
              </div>
            </div>
            <div class="panel-body">
              <%= form_for(resource, as: resource_name, :class=>"login-form" ,url: session_path(resource_name)) do |f| %>
              <div class="col col-md-12">
                <%= f.label :correo,:class=>"form-label" %><br />
                <%= f.email_field :email, autofocus: true ,:class=>"form-username form-control",:style=>"background-color: #ffffff"%>
              </div>
            <br>
              <div class="col col-md-12">
                <%= f.label :contraseña,:class=>"form-label"  %><br />
                <%= f.password_field :password, autocomplete: "off", :class=>"form-password form-control" %>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="col col-md-12">
                  <%= f.check_box :remember_me %>
                  <%= f.label :recordarme,:class=>"text"  %>
                </div>
              <% end %>
              <div class="actions pull-right">
                <%= f.submit "Iniciar Sesion",:class=>"btn btn-primary"%>
              </div>
              <%end%>
            </div>
        </div>
      </div>
    </div>

  <script>
jQuery(document).ready(function() {

    /*
        Fullscreen background
    */
    $.backstretch("assets/images/ibackgrounds/1.jpg");
]
});
</script>
