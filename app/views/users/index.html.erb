<style>
  button{
    margin-right:5px;
  }
  </style>

<div class="container" style="margin-top:50px">
<%if current_user.is_administrator or current_user.is_secretary?%>
<div class="panel panel-primary">
  <div class="panel-heading"><div class="panel-title" style="padding-top:1px;padding-bottom:1px"><h3 style="margin-top:10px">Usuarios registrados: <%=@users.size%> </h3></div></div>
  <div class="panel-body">
    <div class="input-group">
      <span class="input-group-addon ">Buscar</span>
      <input id="filtrar" type="text" class="form-control" placeholder="Ingresa el nombre de la persona que quiere buscar...">
    </div>
  <% if @users.size >0%>
    <ul class="list-group" id="usuarios">
      <% @users.each do |usuario| %>
      <li class="list-group-item">
        <div>
          <h4>  <b><%=usuario.name%>&nbsp;<%=usuario.last_name %></b>
            <%if current_user.not_me(usuario.id) and !usuario.is_administrator%>
                <%if usuario.is_company?%>
                  <a href="/CompanyInformation/<%=usuario.id %>">
                    <button type="button" class="btn btn-info btn-sm pull-right" aria-label="Left Align">Ver Información</button>
                  </a>
                  <%else%>
                  <%=link_to "Ver Currículum", {controller: "resumes",action:"external_show",id:usuario.id},  :class=>"btn btn-default btn-sm pull-right"%>
                <%end%>
            <%if current_user.is_administrator%>
            <button class="btn btn-warning btn-sm pull-right">

              <%if ( !usuario.access_locked?)%>
                <%=link_to "Bloquear usuario", {controller: "users",action:"bloquear",id:usuario.id}%>
              <%else%>
                  <%=link_to "Desbloquear", {controller: "users",action:"desbloquear",id:usuario.id}%>
              <%end%>

            <%end%>
            </button>
            <%if (!usuario.access_locked? and !usuario.is_company? )%>
              <button class="btn btn-primary btn-sm pull-right">
                <%if (!usuario.access_locked? and usuario.is_student? and !usuario.is_director)%>
                  <%=link_to "Hacer director", {controller: "users",action:"add_director",id:usuario.id},:style=>'color:white'%>
                <%else%>
                  <%=link_to "Quitar rol de director", {controller: "users",action:"remove_director",id:usuario.id},:style=>'color:white'%>
                <%end%>
            </button>
            <%end%>
            <%end%>
          </h4>&nbsp;
          <%=usuario.email%>&nbsp;
          <%if usuario.is_company?%>
            Empresa
          <%else%>
            <%if usuario.is_administrator%>
              Administrador
              <%else%>
              Usuario
              <%end%>
          <%end%>
        </div>
      </li>
      <%end%>
   <%end%>
  </ul>
  </div>
</div>
</div>
<script>
$(document).ready(function () {
            (function ($) {
                $('#filtrar').keyup(function () {
                    var rex = new RegExp($(this).val(), 'i');
                    $('#usuarios li').hide();
                    $('#usuarios li').filter(function () {
                        return rex.test($(this).text());
                    }).show();
                })
            }(jQuery));
        });
</script>
<%else%>
  <script>
    alert('No tienes permiso para acceder a esta información');
    // window.location="/users/profile");
  </script>
<%end%>
