<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><div class="panel-title"><h3>Editar Perfil </h3></div></div>
    <div  class="panel-body"></div>
    <div class="panel panel-footer well">
      <%= link_to "Atras", "/users/profile" %>
      <div class="container form-horizontal">
        <div class="col col-md-6">
        <h3>Datos de la cuenta</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :nombre ,:class=>'form-label'%><br />
            <div class="col col-md-6">
              <%= f.text_field :name,:class=>'form-control'%>
            </div>
          </div>
          <%if !current_user.is_company?%>
            <div class="form-group">
              <%= f.label :apellido,:class=>'form-label' %><br />
              <div class="col col-md-6">
                <%= f.text_field :last_name,:class=>'form-control'%>
              </div>
            </div>
          <%end%>
          <div class="form-group">
            <%= f.label :email,:class=>'form-label'  %><br />
            <div class="col col-md-6">
              <%= f.email_field :email, autofocus: true,:class=>'form-control' %>
            </div>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group">
            <%= f.label :contraseña_actual,:class=>'form-label' %> <i>(es obligatorio ingresar la contraseña para cambiar los datos)</i><br />
            <div class="col col-md-6">
              <%= f.password_field :current_password, autocomplete: "off",:class=>'form-control' %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Actualizar Informacion Personal",:class=>'btn btn-primary ' %>
          </div>
        <% end %>
      </div>
        <div class="col col-md-6">
          <h3>Cambiar contraseña</h3>
          <i>(dejelo vacia esta parte si no va a cambiarla)</i>
          <div class="form-group">
            <%=form_for(@user, url: 'user/edit/password' ) do |f|%>
            <%= f.label :contraseña,:class=>'form-label' %> <br />
            <div class="col col-md-6">
              <%= f.password_field :password, autocomplete: "off",:class=>'form-control' %>
            </div>
            <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> caracteres minimo</em>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :confirmacion_contraseña,:class=>'form-label' %><br />
            <div class="col col-md-6">
              <%= f.password_field :password_confirmation, autocomplete: "off" ,:class=>'form-control'%>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :contraseña_actual,:class=>'form-label' %> <i>(es obligatorio ingresar la contraseña para cambiar los datos)</i><br />
            <div class="col col-md-6">
              <%= f.password_field :current_password, autocomplete: "off",:class=>'form-control' %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Cambiar Contraseña",:class=>'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<div  class="panel-body"></div>
<div class="panel panel-footer well">
<div class="container form-horizontal">
<%if (current_user.is_company?)%>
<h3>Informacion Empresarial</h3>
<%= link_to "Atras", :back %>
<%= form_for :company_information, url: '/company/update' do |f| %>
  <div class="form-group">
    <%= f.label :Direccion,:class=>'form-label' %><br />
    <%= f.text_field :address,:class=>'form-control'%>
  </div>
  <div class="field">
    <%= f.label :correo_de_contacto %><br />
    <%= f.email_field :contact_email, autofocus: true %>  </div>
    <div class="field">
    <%= f.label :nombre_de_contacto %><br />
    <%= f.text_field :contact_name %>
    </div>
    <div class="field">
    <%= f.label :codigo_ciuu %><br />
    <%= collection_select(:company_information,:ciu_code_id,CiuCode.all,:id,:description,{},{:multiple => false}) %>
    </div>
    <div class="field">
    <%= f.label :Telefono_Fijo %>
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :nit %>
    <%= f.number_field :nit %>
  </div>
  <br>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_field :description %><br>
  </div>
      <%= f.hidden_field :user_id, :value => current_user.id%>
      <%=f.hidden_field :id, :value => current_user.company_information.id%>
  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>
<%else%>
<h3>Informacion Personal</h3>
<%= link_to "Atras", :back %>
<%= form_for :personal_information, url: '/personal/update' do |f| %>
  <div class="form-group">
    <%= f.label :Direccion,:class=>'form-label' %><br />
    <div class="col col-md-6">
      <%= f.text_field :address,:class=>'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Fecha_Nacimiento,:class=>'form-label' %><br />
    <div class="col col-md-12">
      <%= f.date_select :birthdate,:start_year=> 1970,:end_year=>Time.now.year-10%>
    </div>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :Telefono_Fijo %>
    <div class="col col-md-6">
      <%= f.number_field :phone,:class=>'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :celular,:class=>'form-label' %>
    <div class="col col-md-6">
      <%= f.number_field :cellphone,:class=>'form-control' %>
    </div>
  </div>
  <div class="field">
    <%= f.label :género%>&nbsp;
    <%= f.label :Hombre%>
    <%= f.radio_button :gender, true, :checked=>true%>
    <%= f.label :Mujer%>
    <%= f.radio_button :gender, false%>
  </div>
      <%= f.hidden_field :user_id, :value => current_user.id%>
      <%=f.hidden_field :id, :value => current_user.personal_information.id%>
  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>
<%end%>
</div>
</div>

<div  class="panel-body"></div>
<div class="panel panel-footer well">
<div class="container">
<h3>Eliminar mi cuenta</h3>
<%= link_to "Destroy", admin_destroy_user_path(current_user), method: :delete, data: { confirm: "You sure?" } %>
<p>Ya no quieres ser parte de nuestra red? <%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %></p>
</div>
</div>
</div>
</div>
