<style>
body {
  margin: auto;
  background: #eaeaea;
  font-family: 'Open Sans', sans-serif;
}
.sign-in-email{
  background-color : #FFFFFF;
}
</style>
<div class="container">
<h2>Registro</h2>
<div class= "row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:class=>"form-horizontal") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :nombre,:class=>"control-label col-sm-2" %><br />
    <%= f.text_field :name,:class=>"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :apellido,:class=>"control-label col-sm-2" %><br />
    <%= f.text_field :last_name,:class=>"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :correo_electronico,:class=>"control-label col-sm-2" %><br />
    <%= f.email_field :email, autofocus: true,:class=>"form-control sign-in-email" %>
  </div>
  <div class="form-group">
    <%= f.label :contraseña,:class=>"control-label col-sm-2" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :confirmar_contraseña,:class=>"control-label col-sm-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%=f.check_box :company%>
    <%=f.label :quiero_registrarme_como_empresa%>
  </div>
  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>
<%= render "users/shared/links" %>
</div>
</div>
