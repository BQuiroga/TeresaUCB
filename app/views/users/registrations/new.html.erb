<style>
body {
  margin: auto;
  background: #eaeaea;
  font-family: 'Open Sans', sans-serif;
}
.panel-body{
  background: #A4A4A4;
}
.panel-header{
  background: #585858;
}
.sign-in-email{
  background-color : #FFFFFF;
}
 #check_company:checked ~ .persona{
   display: none;
}
</style>






   <%if devise_error_messages!.size>0%>
<div class="alert alert-danger alert-dismissable fade in">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <%= devise_error_messages! %>
</div>
<%end%>

<div class="container">
<div class="panel panel-default">
<div class="panel-heading">
<h2>Registro</h2>
</div>
<div class= "panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:class=>"form-horizontal") do |f| %>
  <div class="form-group">
    <%= f.label :nombre,:class=>"control-label col-sm-2 persona" %><br />
    <%= f.label :nombre_de_la_empresa,:class=>"control-label col-sm-3 empresa",:style=>"display:none" %><br />
    <%= f.text_field :name,:class=>"form-control"%>
  </div>
  <div class="form-group persona">
    <button class="btn-xs btn-default small pull-left" data-toggle="tooltip2" disabled data-placement="right" title="Si desea registrarse como empresa no es necesario que llene este campo"><i class="glyphicon glyphicon-question-sign" aria-hidden="true"></i></button>
    <%= f.label :apellido,:class=>"control-label col-sm-2" %><br />
    <%= f.text_field :last_name,:class=>"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :correo_electronico,:class=>"control-label col-sm-2" %><br />
    <%= f.email_field :email, autofocus: true,:class=>"form-control sign-in-email" %>
  </div>

  <div class="form-group">
    <button class="btn-xs btn-default small pull-left" data-toggle="tooltip1" disabled data-placement="right"  title="La contraseña debe contener al menos una mayúscula, una minúscula y un número"><i class="glyphicon glyphicon-question-sign" aria-hidden="true"></i></button>
    <%= f.label :contraseña,:class=>"control-label col-sm-2" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :confirmar_contraseña,:class=>"control-label col-sm-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%=f.check_box :company, :id=>'check_company'%>
    <%=f.label :quiero_registrarme_como_empresa%>
  </div>
  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>
<!-- # <%= render "users/shared/links" %> -->
</div>
</div>

</div>
<style>
 #check_company:checked ~ .persona{
   display: none;
}
</style>

<script>

$('#check_company').click(function() {
  $('.persona')[this.checked ? "hide" : "show"]();
  $('.empresa')[this.checked ? "show" : "hide"]();
});
