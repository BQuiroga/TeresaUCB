<div class="container" style="margin-top:50px">
<div class="panel panel-primary">
  <div class="panel-heading">
    <div class="panel-title" style="padding-top:1px;padding-bottom:1px"><h3 style="margin-top:10px">
      <h4>Resultado de personas que contenga:
        <%@busqueda_param.each do |param|%>
        <%=param%>,
        <%end%>
        entre nuestros usuarios
      </h4>
    </div>
  </div>
  <div class="panel-body">
    <%if @users%>
      <ul class="list-group">
        <% @users.each do |user| %>
          <li class="list-group-item">
            <div>
              <h4><%= user.name%>   <%=user.last_name%></h4>
              <strong>Email: </strong><%= user.email %><br>
              <a href="/curriculums/<%=user.id%>"><button class="btn btn-info">Ver Perfil</button></a>
              <% if !current_user.is_company? %>
                <%if (!current_user.is_my_friend(user.id))%>
                <a href="/users/Amigo/<%=user.id%>">
                  <button type="button submit" class="btn btn-primary" aria-label="Right Align"> Agregar a mis amigos</button>
                </a>
                <%else%>
                <button type="button submit" class="btn btn-primary" aria-label="Left Align">
                  <%=link_to "Dejar de ser amigos", {controller: "friendships", action: "notmine", id:user.id}%>
                </button>
                <%end%>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <%end %>
  </div>
 </div>
 </div>
